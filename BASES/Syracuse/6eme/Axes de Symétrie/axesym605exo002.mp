  trace feuillet;
  trace cc;
  marque_p:="croix";
  nomme.ulft(P);
  nomme.lrt(I);
  marque_p:="non";
  fin;
figure(0,0,6u,5u);
  remplis buildcycle(feuillet,cc,feuillet) withcolor gris;
  remplis buildcycle(cc,feuillet) withcolor ciel;
  remplis cercles(I,1/2[I,P]) withcolor rouge;
  remplis buildcycle(dd,reverse(cc),feuillet) withcolor vert;
  trace feuillet;
  trace cc;
  marque_p:="croix";
  nomme.ulft(P);
  nomme.lrt(I);
  marque_p:="non";
