  I=u*(4.5,1.25);
  path cc,dd;
  cc=u*(0.8,0)..u*(0.6,1)..u*(0.2,1.5)..u*(0.9,2)..P..u*(2,4.5)..u*(3,3.9)..u*(4,4.5)..u*(5,5);
  dd=perpendiculaire(I,P,iso(I,P));
  remplis buildcycle(feuillet,cc,feuillet) withcolor gris;
